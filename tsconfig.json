{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "esnext",
		"outDir": "./dist",
		"module": "commonjs",
		"sourceMap": true,
		"incremental": true,
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "dist"]
}
